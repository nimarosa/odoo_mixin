<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- HEADER TEMPLATE -->
    <template id="report_invoice_fe_header">
        <div class="header" style="margin-bottom: 0px; padding-top: 5px; !important;">
            <div class="row">
                <div class="col-5 text-left">
                    <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-width: 250px; max-height: 45px;" alt="Logo" />
                </div>
                <div class="col-2 text-center" style="color: #0078a3;">
                    <span style="display: inline-block; text-align: center; line-height: 8px;">
                        <h1 style="line-height: 25px;">
                            <strong>
                                <span t-field="o.l10n_latam_document_type_id.l10n_ar_letter" />
                            </strong>
                        </h1>
                        <span style="font-size: x-small;">
                            Cod.
                            <span t-field="o.l10n_latam_document_type_id.code" />
                        </span>
                    </span>
                </div>
                <div class="col-5 text-right" style="color: #0078a3;">
                    <h4>
                        <strong>
                            <span t-field="o.l10n_latam_document_type_id.name" />
                        </strong>
                    </h4>
                </div>
            </div>
            <div class="row" style="border-bottom: 3px solid black; padding-bottom: 0px; !important;">
                <div class="col-6 text-left">
                    <span t-field="o.company_id.name" style="font-weight: bold;" />
                    <p style="font-size: 10px;">
                        <t t-if="o.company_id.partner_id.street">
                            <span t-field="o.company_id.partner_id.street" />
                            ,
                        </t>
                        <t t-if="o.company_id.partner_id.city">
                            <span t-field="o.company_id.partner_id.city" />
                            ,
                        </t>
                        <t t-if="o.company_id.partner_id.state_id">
                            <span t-field="o.company_id.partner_id.state_id.name" />
                            ,
                        </t>
                        <t t-if="o.company_id.partner_id.country_id">
                            <span t-field="o.company_id.partner_id.country_id.name" />
                        </t>
                        <br />
                        <strong>CUIT: </strong>
                        <span t-field="o.company_id.vat" />
                        -
                        <span t-field="o.company_id.partner_id.l10n_ar_afip_responsibility_type_id.name" />
                        <span> • </span>
                        <strong>Ingresos Brutos: </strong>
                        <span t-if="o.company_id.l10n_ar_gross_income_type == 'no_liquida'">No liquida</span>
                        <span t-if="o.company_id.l10n_ar_gross_income_type != 'no_liquida'" t-field="o.company_id.l10n_ar_gross_income_number" />
                        <br />
                        <strong>Inicio de actividades: </strong>
                        <span t-field="o.company_id.l10n_ar_afip_start_date" />
                        <span> • </span>
                        <strong>Sitio Web: </strong>
                        <span t-field="o.company_id.website" />
                        <br />
                        <strong>Email: </strong>
                        <span t-field="o.company_id.email" />
                        <span> • </span>
                        <strong>Telefonos: </strong>
                        <span t-field="company.partner_id.phone" />
                        <span> / </span>
                        <span t-field="company.partner_id.mobile" />
                        <br />
                    </p>
                </div>
                <div class="col-6 text-right">
                    <div class="row">
                        <div class="col-5 text-right" t-if="o.texto_modificado_qr">
                            <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('QR', o.texto_modificado_qr, 450, 450)" style="width:90px;height:90px;" />
                        </div>
                        <div class="col-7 p-2 text-right">
                            <span t-if="o.state == 'posted' or o.state == 'draft'">
                                <strong>
                                    <span t-field="o.name" />
                                </strong>
                                <br />
                            </span>
                            <p style="font-size: 10px;">
                                <strong>Fecha Emision: </strong>
                                <span t-field="o.invoice_date" />
                                <div t-if="o.move_type == 'out_invoice' and (o.state == 'posted') and o.l10n_ar_afip_service_start and o.l10n_ar_afip_service_end">
                                    <strong>Período facturado: </strong>
                                    <span t-if="o.l10n_ar_afip_service_start">
                                        <span t-field="o.l10n_ar_afip_service_start" t-options="{'format': 'dd/MM/yyyy'}" />
                                    </span>
                                    <strong> - </strong>
                                    <span t-if="o.l10n_ar_afip_service_end">
                                        <span t-field="o.l10n_ar_afip_service_end" t-options="{'format': 'dd/MM/yyyy'}" />
                                    </span>
                                </div>
                                <br />
                                <strong>Fecha Vencimiento: </strong>
                                <span t-field="o.invoice_date_due" />
                                <br />
                                <strong> CAE: </strong>
                                <span t-field="o.afip_cae" />
                                <strong> • </strong>
                                <strong> Vto CAE: </strong>
                                <span t-field="o.afip_cae_due" />
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </template> <!-- END HEADER TEMPLATE -->

    <!-- FOOTER TEMPLATE -->
    <template id="report_invoice_fe_footer">
        <div class="footer" style="padding-top: 5px; border-top: 3px solid black; !important;">
            <div class="row" style="font-size:12px;">
                <div class="col-9">
                    <p style="font-size:12px;" class="m-0" align="justify">
                        <strong>Nota: </strong>
                        <span t-if="o.narration" t-field="o.narration" />
                        <br t-if="o.partner_id.l10n_ar_afip_responsibility_type_id.code == '6' and o.l10n_latam_document_type_id.l10n_ar_letter == 'A'" />
                        <span t-if="o.partner_id.l10n_ar_afip_responsibility_type_id.code == '6' and o.l10n_latam_document_type_id.l10n_ar_letter == 'A'">
                            El credito fiscal discriminado en el presente comprobante solo podrá ser computado a efectos del Régimen de Sostenimiento e Inclusión Fiscal para Pequeños Contribuyentes de la Ley Nro. 27.168
                        </span>
                        <br t-if="o.invoice_payment_term_id" />
                        <span t-if="o.invoice_payment_term_id" t-field="o.invoice_payment_term_id.note" />
                    </p>
                </div>
                <div class="col-3 text-right">
                    <span>Pagina: </span>
                    <span class="page" />
                    <span> / </span>
                    <span class="topage" />
                    <br />
                    <img t-if="o.texto_modificado_qr" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('QR', o.texto_modificado_qr, 450, 450)" style="width:70px;height:70px; padding-bottom: 5px; padding-top: 5px" />
                    <br />
                    <strong>CAE: </strong>
                    <span t-field="o.afip_cae" />
                    <br />
                    <strong>VTO. CAE: </strong>
                    <span t-field="o.afip_cae_due" />
                </div>
            </div>
        </div>
    </template> <!-- END FOOTER TEMPLATE -->

    <!-- PAGE TEMPLATE -->
    <template id="report_invoice_fe_page"></template> <!-- END PAGE TEMPLATE -->

    <!-- CLIENT DATA COMPONENT TEMPLATE -->
    <template id="report_invoice_fe_client_data">
        <div class="row" style="border-bottom: 2px solid black; padding-top: 20px ">
            <strong>Datos del Cliente</strong>
        </div>
        <div class="row" style="border-bottom: 1px solid black; padding-top: 5px; padding-bottom: 5px; font-size: 12px; ">
            <div class="col-6">
                <span t-field="o.partner_id.name" style="font-size: 15px; font-weight: bold;" />
                <br />
                <t t-if="o.partner_id.street">
                    <span t-field="o.partner_id.street" />
                    ,
                </t>
                <t t-if="o.partner_id.city">
                    <span t-field="o.partner_id.city" />
                    ,
                </t>
                <t t-if="o.partner_id.state_id">
                    <span t-field="o.partner_id.state_id.name" />
                    ,
                </t>
                <t t-if="o.partner_id.country_id">
                    <span t-field="o.partner_id.country_id.name" />
                </t>
                <br />
            </div>
            <div class="col-6 text-right">
                <strong> CUIT: </strong>
                <span t-field="o.partner_id.vat" />
                <br />
                <strong>Condicion de IVA: </strong>
                <span t-field="o.partner_id.l10n_ar_afip_responsibility_type_id.name" />
                <br />
                <strong>Grupo / Administracion: </strong>
                <span t-field="o.partner_id.company_group_id.name" t-if="o.partner_id.company_group_id" />
            </div>
        </div>
    </template>

    <!-- EXTRA DATA TEMPLATE -->
    <template id="report_invoice_fe_extra_data">
        <div class="row m-0 text-center" style="border-bottom: 1px solid black; padding-top: 5px; padding-bottom: 5px; font-size: 12px">
            <div class="col-2" t-if="o.partner_id.ref">
                <strong>Cod. Cliente</strong>
                <p class="m-0" t-field="o.partner_id.ref" />
            </div>
            <div class="col-2" t-if="o.currency_id">
                <strong>Moneda</strong>
                <p class="m-0" t-field="o.currency_id.name" />
            </div>
            <div class="col-2" t-if="o.currency_id.id != o.company_id.currency_id.id">
                <strong>Cotizacion</strong>
                <p class="m-0" t-field="o.l10n_ar_currency_rate" />
            </div>
            <div class="col-2" t-if="o.invoice_payment_term_id">
                <strong>Condicion de Pago</strong>
                <p class="m-0" t-field="o.invoice_payment_term_id.name" />
            </div>
            <div class="col-2" t-if="o.invoice_origin">
                <strong>Origen</strong>
                <p class="m-0" t-field="o.invoice_origin" />
            </div>
            <!-- div name="reference" class="col-2" t-if="o.reference">
                <strong>Remito:</strong>
                <p t-field="o.reference"/>
              </div -->
        </div>
    </template> <!-- END EXTRA DATA TEMPLATE -->

    <!-- TABLE ITEMS TEMPLATE -->
    <template id="report_invoice_fe_table_items">
        <div class="row" style="border-bottom: 2px solid black; padding-top: 20px;">
            <strong>
            Detalle del Comprobante
        </strong>
        </div>
        <div class="row" style="border-bottom: 0px solid black; padding-top: 5px;">
            <table class="table table-striped table-bordered table-sm">
                <thead class="table-dark">
                    <tr>
                        <th>Código</th>
                        <th>Descripcion</th>
                        <th class="text-right">Cantidad</th>
                        <th class="text-right">Precio Unit.</th>
                        <th t-if="display_discount" class="text-right">Desc.(%)</th>
                        <div t-if="o.l10n_latam_document_type_id.l10n_ar_letter != 'B'">
                            <th class="text-right">IVA</th>
                        </div>
                        <th class="text-right">Subtotal</th>
                    </tr>
                </thead>
                <tbody class="invoice_tbody">
                    <tr t-foreach="o.invoice_line_ids" t-as="l">
                        <t t-if="not l.display_type">
                            <td style="padding: 5px;">
                                <span t-field="l.product_id.default_code" />
                            </td>
                            <td style="padding: 5px;">
                                <span t-field="l.product_id.name" />
                            </td>
                            <td style="padding: 5px;" class="text-right">
                                <span t-esc="'{0:,.2f}'.format(l.quantity)" />
                                <span t-field="l.uom_id" groups="product.group_uom" />
                            </td>
                            <div t-if="o.l10n_latam_document_type_id.l10n_ar_letter != 'B'">
                                <td style="padding: 5px;" class="text-right">
                                    <span t-esc="'{0:,.2f}'.format(l.price_unit)" />
                                </td>
                            </div>
                            <div t-if="o.l10n_latam_document_type_id.l10n_ar_letter == 'B'">
                                <td style="padding: 5px;" class="text-right">
                                    <span t-esc="'{0:,.2f}'.format(l.price_subtotal_vat / l.quantity)" />
                                    <!-- span t-esc="'{0:,.2f}'.format(l.price_subtotal / l.quantity)"/ -->
                                </td>
                            </div>
                            <td style="padding: 5px;" t-if="display_discount" class="text-right">
                                <span t-field="l.discount" />
                            </td>
                            <td style="padding: 5px;" class="text-right" t-if="o.l10n_latam_document_type_id.l10n_ar_letter != 'B'">
                                <span t-esc="', '.join(map(lambda x: (x.description or x.name), l.tax_ids))" />
                            </td>
                            <td style="padding: 5px;" class="text-right" t-if="o.l10n_latam_document_type_id.l10n_ar_letter != 'B'">
                                <span t-field="l.price_subtotal" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}" />
                            </td>
                            <td style="padding: 5px;" class="text-right" t-if="o.l10n_latam_document_type_id.l10n_ar_letter == 'B'">
                                <span t-field="l.price_subtotal_vat" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}" />
                            </td>
                        </t>
                        <t t-if="l.display_type == 'line_section'">
                            <td colspan="99" class="bg-200 font-weight-bold o_line_section" style="padding: 5px;">
                                <span t-field="l.name" t-options="{'widget': 'text'}" />
                            </td>
                        </t>
                        <t t-if="l.display_type == 'line_note'">
                            <td colspan="99" style="padding: 5px;">
                                <i t-field="l.name" t-options="{'widget': 'text'}" />
                            </td>
                        </t>
                    </tr>
                </tbody>
            </table>
        </div>
    </template> <!-- END TABLE ITEMS TEMPLATE -->


